<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Profile"
    android:background="@drawable/lang">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Profile"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:fontFamily="serif"
        />
    <android.support.v7.widget.CardView
        android:layout_width="360dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#D569808F"
        android:layout_marginTop="20dp">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/customs"
            android:drawableLeft="@mipmap/ic_launcher_person"
            android:ems="10"
            android:id="@+id/proname"
            android:textSize="15dp"

            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/customs"
            android:ems="10"
            android:drawableLeft="@mipmap/ic_launcher_message"
            android:id="@+id/proemail"
            android:textSize="15dp"
            />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/customs"
                android:ems="10"
                android:drawableLeft="@mipmap/ic_launcher_phone"
                android:id="@+id/prophone"
                android:textSize="15dp"
                />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/customs"
            android:ems="10"
            android:drawableLeft="@mipmap/ic_launcher_date"
            android:id="@+id/prodob"
            android:textSize="15dp"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/customs"
            android:ems="10"
            android:drawableLeft="@mipmap/ic_launcher_city"
            android:id="@+id/prolocation"
            android:textSize="15dp"
            />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Edit/Update"
            android:textSize="15dp"
           android:id="@+id/editprofile"
            style="@style/customs"
            android:ems="10"
            android:layout_gravity="center"
            />
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="LOGOUT"
            android:textSize="15dp"
            style="@style/customs"
            android:ems="10"
            android:layout_gravity="center"
            android:id="@+id/logout"
            />

    </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>